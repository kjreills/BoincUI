@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_darkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudSwitch @bind-Checked=@(_darkMode) />
        <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit" Link="https://mudblazor.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/kjreills/BoincUI" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudImage Src="boinc_logo_128_trans.png" Alt="BOINC Logo"/>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    bool _darkMode = false;

    // TODO: Finish the new palette
    MudTheme _theme = new MudTheme
    {
        Palette = new Palette
        {
            Primary = "#1e6ea0",
            PrimaryDarken = "#001739",
            PrimaryLighten = "#4d6692",
            AppbarBackground = "#1e6ea0",
        },
        PaletteDark = new Palette
        {
            Primary = "#1e3c64",
            PrimaryDarken = "#001739",
            PrimaryLighten = "#4d6692",
            AppbarBackground = "#1e3c64",
        }
    };

    void DrawerToggle() => _drawerOpen = !_drawerOpen;
}
